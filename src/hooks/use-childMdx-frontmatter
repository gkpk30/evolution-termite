import { graphql, useStaticQuery } from "gatsby"

export const useChildMdx = () => {
  const data = useStaticQuery(graphql`
    query {
        allFile(filter: {sourceInstanceName: {eq: "pest-control"}}) {
            nodes {
              childMdx {
                frontmatter {
                  slug
                  title
                  description
                  pestType
                }
              }
            }
          }
    }
  `)

  return data.allfile.nodes
}